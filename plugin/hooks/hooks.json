{
  "description": "Voice hooks configuration template - paths are replaced dynamically during installation",
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node \"{{PROJECT_PATH}}/.claude/hooks/stop-hook.cjs\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "_voice-hooks__speak$",
        "hooks": [
          {
            "type": "command",
            "command": "node \"{{PROJECT_PATH}}/.claude/hooks/pre-speak-hook.cjs\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "^(?!.*_voice-hooks__)",
        "hooks": [
          {
            "type": "command",
            "command": "node \"{{PROJECT_PATH}}/.claude/hooks/post-tool-hook.cjs\""
          }
        ]
      }
    ]
  }
}
